@{
    Layout = null;
}
@model PrintPaperViewModel
@{
    ViewBag.Title = "Exercise Paper";
}

<div class="paper-container">
    <h1 class="paper-title text-center">@Model.PaperName</h1>
    <hr class="separator" />

    @if (Model != null)
    {
        int k = 0;
        foreach (var item in Model.Questions)
        {
            <div class="question-block">
                <div class="question-header">
                    <b>Question @(k + 1)</b>
                </div>

                @if (!string.IsNullOrEmpty(item.Figure))
                {
                    <div class="figure-block">
                        <pre>@Html.Raw(item.Figure.Replace("[nline]", "\n"))</pre>
                    </div>
                }

                <div class="question-text">
                    <pre>@Html.Raw(item.Question.Replace("[nline]", "\n"))</pre>
                </div>

                <div class="answer-block">
                    <label>Answer:</label>
                    <textarea name="answer[@k]" rows="10" class="answer-area"></textarea>
                </div>

                <hr class="separator" />
            </div>
            k++;
        }
    }
</div>

<style>
    body {
        font-family: 'Times New Roman', serif;
        font-size: 16px;
        background-color: white;
        color: black;
        margin: 0;
        padding: 0;
    }

    .paper-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px 40px;
        border: 1px solid black;
        background-color: #fff;
    }

    .paper-title {
        font-size: 24px;
        margin-bottom: 20px;
        text-decoration: underline;
    }

    .separator {
        border: 1px solid black;
        margin: 20px 0;
    }

    .question-block {
        margin-bottom: 30px;
    }

    .question-header {
        font-size: 18px;
        margin-bottom: 10px;
    }

    .figure-block {
        font-family: 'Courier New', monospace;
        background-color: #f5f5f5;
        padding: 10px;
        margin-bottom: 10px;
        white-space: pre-wrap;
    }

    .question-text {
        font-size: 16px;
        margin-bottom: 15px;
        white-space: pre-wrap;
    }

    .answer-block {
        margin-bottom: 20px;
    }

        .answer-block label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

    .answer-area {
        width: 100%;
        height: 150px;
        border: 1px solid black;
        padding: 10px;
        font-family: 'Times New Roman', serif;
        font-size: 16px;
        resize: none;
        line-height: 1.5;
    }
</style>
