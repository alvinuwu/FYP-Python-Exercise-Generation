@model FYP.Models.CreateExQuestion
    <html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    </head>
    <body>
        <div id="tab" class="tab-pane">
            <div class="panel-body">
                <div style="padding: 20px">

                    @{
                        ViewBag.Title = "Generate Open-Ended Template";
                    }

                    <h2>@ViewData["Title"]</h2>
                    <br />
                    <br />
                    <div class="container">
                        <div class="col-6">
                            <form asp-controller="ExercisePaper" asp-action="GenerateOE" method="post" class="form-horizontal" role="form">
                                <div class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Topic : </b></label>
                                        <div class="col-6">
                                            <select asp-for="Topics" id="topics" class="form-control col-6" style="width: 100%"
                                                    asp-items="@((SelectList)ViewData["topics"])">
                                            </select>
                                            @Html.ValidationMessageFor(d => d.Topics, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Figure : </b></label>
                                        <div class="col-6">
                                            <textarea rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Figure"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Question : </b></label>
                                        <div class="col-6">
                                            <textarea rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Question"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Answer : </b></label>
                                        <div class="col-6">
                                            <textarea rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Answer"></textarea>
                                        </div>
                                    </div>
                                    <br />
                                    <hr style="width: 900px" />
                                    <h3 style="width: 900px; text-align:center">Variations of the same question</h3>
                                    <hr style="width: 900px" />
                                    <br />

                                    <div class="form-group row">
                                        <p class="control-label col-5 text-right"></p>
                                        <div class="col-6" style="font-size: 25px"><b>Variant 1</b></div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Figure Variant 1: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Figure Variant 1" rows="2" cols="100" style="width: 500px" asp-for="FigureVar"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Question Variant 1: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Question Variant 1" rows="2" cols="100" style="width: 500px" asp-for="QuestionVar"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Answer Variant 1: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Answer Variant 1" rows="2" cols="100" style="width: 500px" asp-for="AnswerVar"></textarea>
                                        </div>
                                    </div>
                                    <br />


                                    <div class="form-group row">
                                        <p class="control-label col-5 text-right"></p>
                                        <div class="col-6" style="font-size: 25px"><b>Variant 2</b></div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Figure Variant 2: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Figure Variant 2" rows="2" cols="100" style="width: 500px" asp-for="FigureVar"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Question Variant 2: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Question Variant 2" rows="2" cols="100" style="width: 500px" asp-for="QuestionVar"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Answer Variant 2: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Answer Variant 2" rows="2" cols="100" style="width: 500px" asp-for="AnswerVar"></textarea>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="form-group row">
                                        <p class="control-label col-5 text-right"></p>
                                        <div class="col-6" style="font-size: 25px"><b>Variant 3</b></div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Figure Variant 3: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Figure Variant 3" rows="2" cols="100" style="width: 500px" asp-for="FigureVar"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Question Variant 3: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Question Variant 3" rows="2" cols="100" style="width: 500px" asp-for="QuestionVar"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-5 text-right"><b>Enter Answer Variant 3: </b></label>
                                        <div class="col-6">
                                            <textarea placeholder="Answer Variant 3" rows="2" cols="100" style="width: 500px" asp-for="AnswerVar"></textarea>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="form-group row">
                                        <div class="offset-sm-5 col-6 col-10">
                                            <input type="submit" value="Generate" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
<script>
    $('.form-select2').select2();

    $(document).ready(function () {
        $("#topics").select2({
            placeholder: "Select Topics (Searchable)"
        });
    });


</script>