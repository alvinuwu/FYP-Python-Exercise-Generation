@model List<Topics>
@{
    ViewBag.Title = "Topic List";
}

<html>
<head>

</head>
<body>
    <div id="tab" class="tab-pane">
        <div class="panel-body">
            <div style="padding: 20px">
                <h2>Topic List</h2>
                <br />
                @if (TempData["Msg"] != null)
                {
                    <div class="form-group row">
                        <div class="col">
                            <div class="alert alert-@TempData["MsgType"]">
                                <text><b>@Html.Raw(TempData["Msg"])</b></text>
                            </div>
                        </div>
                    </div>
                }
                <br />
                <a class="btn btn-default" style="color:white; background-color:dodgerblue" asp-action="AddTopic" asp-controller="ExercisePaper">Add Topic</a>
                <br />
                <br />
                <table id="exercisePaperTable" class="table table-bordered table-condensed table-hover table-striped">
                    <tr style="background-color:darkblue">
                        <th scope="col" width="2%" style="color:white">Id</th>
                        <th scope="col" width="15%" style="color:white">Topics</th>
                    </tr>

                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                            </tr>
                        }
                    }
                </table>
                <br /><br /><br />
            </div>
        </div>
    </div>
</body>
</html>

