@model List<OEQuestionsPaper>
<html>
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a076d05399.js" />
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>

</head>
<body>
    @{
        ViewBag.Title = "Edit Open-Ended Paper";
    }

    <h2>@ViewData["Title"]</h2>

    <div id="tab" class="tab-pane">
        <div class="panel-body">
            <div class="form-group row">
                <div class="col-6">
                    <br />
                    <br />
                    <div class="container">
                        <div class="col-12">

                            <div class="form-horizontal">
                                <br />
                                <h3>Questions List</h3>
                                <br /><hr /><br />
                                <div class="form-group row">

                                    <label class="control-label col-5 text-left"><b>Topic : </b></label>
                                    <div class="col-6">
                                        <select id="topics" class="form-control col-12" style="font-family: 'HP Simplified'"
                                                asp-items="@((SelectList)ViewData["topics"])">
                                            <option value="-1">--- Select a Topic ---</option>
                                        </select>

                                    </div>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <hr />
                                    <br />

                                    <hr />

                                </div>

                            </div>

                            <div class="col-13">

                                <table class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr style="background-color:darkblue">
                                            <th scope="col" width="2%" style="color:white">#</th>
                                            <th scope="col" width="20%" style="color:white">Figure</th>
                                            <th scope="col" width="20%" style="color:white">Question</th>
                                            <th scope="col" width="20%" style="color:white">Answer</th>
                                            <th scope="col" width="5%" style="color:white">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="divQuestion">
                                        @*AJAX*@
                                    </tbody>
                                </table>

                            </div>
                            <div class="form-group row">
                                @*<label class="control-label col-5 text-right"></label>
                                    <div class="col-8">
                                        <input style="background-color:dodgerblue; color:white" type="submit" value="Confirm" class="btn btn-default" />
                                        <a class="btn btn-default" style="background-color: lightgray; color: black" asp-action="ViewOEPapers" asp-controller="Home">Cancel</a>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>




                <div class="vl"></div>




                <div class="col-5">
                    <br />
                    <br />
                    <div class="container">
                        <div class="col-12">

                            <div class="form-horizontal">
                                <br />
                                <h3>@ViewData["ExercisePaperName"]</h3>
                                <br /><hr /><br />
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <div class="col-13">

                                <table class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr style="background-color:darkblue">
                                            <th scope="col" width="20%" style="color:white">Figure</th>
                                            <th scope="col" width="20%" style="color:white">Question</th>
                                            <th scope="col" width="20%" style="color:white">Answer</th>
                                            <th scope="col" width="5%" style="color:white">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="divQuestion2">
                                        @if (Model != null)
                                        {
                                            int count = 1;
                                            @foreach (var item in Model)
                                            {
                                                <tr id="question-@item.Id">
                                                    <td>
                                                        @{
                                                            if (item.Figure.Contains("[nline]"))
                                                            {
                                                                var split = item.Figure.Split("[nline]");
                                                                int counter = 0;
                                                                foreach (var i in split)
                                                                {
                                                                    @split[counter]<br />
                                                                    counter++;
                                                                }
                                                            }
                                                            else
                                                            {
                                                                @item.Figure
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (item.Question.Contains("[nline]"))
                                                            {
                                                                var split = item.Question.Split("[nline]");
                                                                int counter = 0;
                                                                foreach (var i in split)
                                                                {
                                                                    @split[counter]<br />
                                                                    counter++;
                                                                }
                                                            }
                                                            else
                                                            {
                                                                @item.Question
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (item.Answer.Contains("[nline]"))
                                                            {
                                                                var split = item.Question.Split("[nline]");
                                                                int counter = 0;
                                                                foreach (var i in split)
                                                                {
                                                                    @split[counter]<br />
                                                                    counter++;
                                                                }
                                                            }
                                                            else
                                                            {
                                                                @item.Answer
                                                            }
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        <a onclick="return ConfirmDelete(@item.Id)" class="btn btn-default" style="background-color:salmon; color:white"><i class="fa fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                        @*AJAX*@
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label class="control-label col-8 text-right"></label>
                        <div class="col-3">
                            <a style="background-color:dodgerblue; color:white" type="submit" asp-controller="ExercisePaper" asp-action="ViewOEPapers" class="btn btn-default">Save Edits</a>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>

</body>
</html>
<style>
    .vl {
        border-left: 30px solid whitesmoke;
        height: auto;
    }
</style>
<script>

    function ConfirmDelete(count) {
        if (confirm("Are you sure you want to delete?") == false) {
            event.preventDefault();
            event.stopPropagation();
            return false;
        }
        else {
            var tdQuestion = $("#question-" + count);
            tdQuestion.html("");

            var apiUrl = "/api/OEQuestion/5/" + count + '/' + @ViewData["ExercisePaperId"];

            $.getJSON(apiUrl, function (question) {
            });
        }
    }

    function AjaxConfirmDelete(id) {
        if (confirm("Are you sure you want to delete?") == false) {
            event.preventDefault();
            event.stopPropagation();
            return false;
        }
        else {
            var tdQuestion = $("#ajaxQuestion-" + id);
            tdQuestion.html("");

            var apiUrl = "/api/OEQuestion/5/" + id + '/' + @ViewData["ExercisePaperId"];

            $.getJSON(apiUrl, function (question) {
            });
        }
    }

    $(document).ready(function () {



        $("#topics").change(ajaxLoadQuestion);
    });



    function ajaxLoadQuestion() {
        var topic = $("#topics").val();
        var apiUrl = "/api/OEQuestion/4/" + topic;
        var divQuestion = $("#divQuestion");

        divQuestion.html("");

        $.getJSON(apiUrl, function (result) {
            $.each(result, function (i, question) {
                divQuestion.append(
                    "<tr><td>" + (i + 1) +
                    "</td><td>" + question.figure +
                    "</td><td>" + question.question +
                    "</td><td>" + question.answer +
                    "</td><td>" + '<a class="btn btn-default" onclick="return AddQuestion(' + question.id + ')" style="background-color:darkseagreen; color:white;" >&rarr;</a>' +
                    "</td></tr>"
                );
            });
        });
    }

    function AddQuestion(id) {
        var apiUrl = "/api/OEQuestion/3/" + id + '/' + @ViewData["ExercisePaperId"];
        var divQuestion = $("#divQuestion2");

        $.getJSON(apiUrl, function (question) {
                divQuestion.append(
                    '<tr id="ajaxQuestion-' + question.id + '"><td>'+ question.figure +
                    "</td><td>" + question.question +
                    "</td><td>" + question.answer +
                    "</td><td>" + '<a class="btn btn-default" onclick="return AjaxConfirmDelete(' + question.id + ')" style="background-color:salmon; color:white;" ><i class="fa fa-trash"></i></a>' +
                    "</td></tr>"
                );
        });
    }

</script>