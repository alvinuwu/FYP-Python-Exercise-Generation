@model Topics
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
</head>
<body>
    <div id="tab" class="tab-pane">
        <div class="panel-body">
            <div style="padding: 20px">

                @{
                    ViewBag.Title = "Edit Open-Ended Question";
                }

                <h2>@ViewData["Title"]</h2>
                <br />

                <br />
                <div class="container">
                    <div class="col-6">
                        <form asp-controller="ExercisePaper" asp-action="AddTopic" method="post" class="form-horizontal" role="form">
                            <div class="form-horizontal">
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Topic Name : </b></label>
                                    <div class="col-6">
                                        <textarea rows="1" cols="50" class="form-control" style="width: 500px" asp-for="Name"></textarea>
                                    </div>
                                </div>

                                <br />

                                <div class="form-group row">
                                    <div class="offset-sm-5 col-6 col-10">
                                        <input style="background-color: dodgerblue; color: white" type="submit" value="Add" class="btn btn-default" />
                                        <a class="btn btn-default" style="background-color: lightgray; color: black" asp-action="ViewTopics" asp-controller="ExercisePaper">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $('.form-select2').select2();

    $(document).ready(function () {
        $("#topics").select2({
            placeholder: "Select Topics (Searchable)"
        });
    });


</script>