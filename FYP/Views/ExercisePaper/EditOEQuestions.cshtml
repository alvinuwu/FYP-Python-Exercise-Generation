@model OEQuestions
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
</head>
<body>
    <div id="tab" class="tab-pane">
        <div class="panel-body">
            <div style="padding: 20px">

                @{
                    ViewBag.Title = "Edit Open-Ended Question";
                }

                <h2>@ViewData["Title"]</h2>
                <br />
                <br />
                <div class="container">
                    <div class="col-6">
                        <form asp-controller="ExercisePaper" asp-action="EditOEQuestions" method="post" class="form-horizontal" role="form">
                            <div class="form-horizontal">
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Figure : </b></label>
                                    <div class="col-6">
                                        <textarea rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Figure" value="@Model.Figure"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Question : </b></label>
                                    <div class="col-6">
                                        <textarea rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Question" value="@Model.Question"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Answer : </b></label>
                                    <div class="col-6">
                                        <textarea rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Answer" value="@Model.Answer"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Maximum Use Count : </b></label>
                                    <div class="col-6">
                                        <input type="number" asp-for="UseCount" value="@Model.UseCount" class="form-control" />
                                        <input asp-for="Topic" value="@Model.Topic" class="form-control" hidden />
                                    </div>
                                </div>
                                <br />

                                <div class="form-group row">
                                    <div class="offset-sm-5 col-6 col-10">
                                        <input style="background-color: dodgerblue; color: white" type="submit" value="Edit" class="btn btn-default" />
                                        <a class="btn btn-default" style="background-color: lightgray; color: black" asp-action="ViewOEQuestions" asp-controller="ExercisePaper">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $('.form-select2').select2();

    $(document).ready(function () {
        $("#topics").select2({
            placeholder: "Select Topics (Searchable)"
        });
    });


</script>