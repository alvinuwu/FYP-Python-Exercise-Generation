@model List<ExercisePaper>
@{
    ViewBag.Title = "Open-Ended Exercise Papers";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Create / View Open-Ended Exercise Papers</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
        {
            <a class="btn btn-primary btn-lg" asp-controller="ExercisePaper" asp-action="Create">
                <i class="fa fa-plus"></i> Add Paper
            </a>
        }
    </div>

    <!-- TempData Message -->
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-@TempData["MsgType"] alert-dismissible fade show" role="alert">
            <strong>@Html.Raw(TempData["Msg"])</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Papers Table -->
    <div class="table-responsive">
        <table id="exercisePaperTable" class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Topics</th>
                    <th>Total Questions</th>
                    <th>Duration (min)</th>
                    <th>Difficulty</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Topics</td>
                            <td class="text-center">@item.TotalQns</td>
                            <td class="text-center">@item.Time</td>
                            <td class="text-center">
                                @{
                                    var difficultyNum = item.Difficulty.GetValueOrDefault();
                                    var totalDifficulty = item.TotalQns * 5;
                                    var diff = difficultyNum / totalDifficulty;
                                    string color = diff < 0.334 ? "green" : diff < 0.667 ? "darkorange" : "darkred";
                                    string text = diff < 0.334 ? "Easy" : diff < 0.667 ? "Medium" : "Hard";
                                }
                                <span style="color:@color">@text</span>
                            </td>
                            <td class="text-center">
                                @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
                                {
                                    <div class="d-flex flex-column align-items-center gap-1">
                                        <a class="btn btn-sm btn-primary w-100" asp-controller="ExercisePaper" asp-action="Preview" asp-route-id="@item.ExercisePaperId" target="_blank">
                                            <i class="fa fa-eye"></i> Preview
                                        </a>
                                        <a class="btn btn-sm btn-success w-100" asp-controller="ExercisePaper" asp-action="EditOEQuestionsPaper" asp-route-id="@item.ExercisePaperId">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                        <a class="btn btn-sm btn-danger w-100" onclick="return ConfirmDelete()" asp-controller="ExercisePaper" asp-action="DeleteOEQuestionsPaper" asp-route-id="@item.Id">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                        <a class="btn btn-sm btn-warning w-100" asp-controller="ExercisePaper" asp-action="PrintPaper" asp-route-id="@item.ExercisePaperId" target="_blank">
                                            <i class="fa fa-print"></i> Print
                                        </a>
                                    </div>
                                }
                                @if (User.IsInRole("Student"))
                                {
                                    <a class="btn btn-sm btn-primary mt-1 w-100" asp-controller="ExercisePaper" asp-action="GenerateExercisePaper" asp-route-id="@item.ExercisePaperId">
                                        <i class="fa fa-play"></i> Start
                                    </a>
                                }
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No papers available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function ConfirmDelete() {
        if (!confirm("Are you sure you want to delete?")) {
            event.preventDefault();
            event.stopPropagation();
            return false;
        }
    }
</script>

@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#exercisePaperTable').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: true,
                lengthMenu: [[6, 10, 20, -1], [6, 10, 20, "All"]],
            });
        });
    </script>
}
