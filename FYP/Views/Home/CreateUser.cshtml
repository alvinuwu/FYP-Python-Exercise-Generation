@model NewUser
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
</head>
<body>
    <div id="tab" class="tab-pane">
        <div class="panel-body">
            <div style="padding: 20px">

                @{
                    ViewBag.Title = "Create User";
                }

                <h2>@ViewData["Title"]</h2>
                <br />
                <br />
                <div class="container">
                    <div class="col-6">
                        <form asp-controller="Home" asp-action="CreateUser" method="post" class="form-horizontal" role="form">
                            <div class="form-horizontal">
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Username : </b></label>
                                    <div class="col-6">
                                        <input rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Id">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Password : </b></label>
                                    <div class="col-6">
                                        <input rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Password">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Name : </b></label>
                                    <div class="col-6">
                                        <input rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Role : </b></label>
                                    <div class="col-6">
                                        <select class="form-control" style="width: 500px" asp-for="Role">
                                            <option value="Admin">
                                                Admin
                                            </option>
                                            <option value="Lecturer">
                                                Lecturer
                                            </option>
                                            <option value="Student">
                                                Student
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Class : </b></label>
                                    <div class="col-6">
                                        <input rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Class">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label col-5 text-right"><b>Email : </b></label>
                                    <div class="col-6">
                                        <input rows="2" cols="100" class="form-control" style="width: 500px" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    
                                </div>

                                <div class="form-group row">
                                    <div class="offset-sm-5 col-6 col-10">
                                        <input style="background-color: dodgerblue; color: white" type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<style>
    #addBtn {
        display: inline-block;
        padding: 7px 17px;
        font-size: 17px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        outline: none;
        color: #fff;
        background-color: #4CAF50;
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px #999;
    }

        #addBtn:hover {
            background-color: #3e8e41
        }

        #addBtn:active {
            background-color: #3e8e41;
            box-shadow: 0 3px #666;
            transform: translateY(2px);
        }

    #delBtn {
        display: inline-block;
        padding: 7px 17px;
        font-size: 17px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        outline: none;
        color: #fff;
        background-color: red;
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px #999;
    }

        #delBtn:hover {
            background-color: #d83c5f
        }

        #delBtn:active {
            background-color: #d83c5f;
            box-shadow: 0 3px #666;
            transform: translateY(2px);
        }
</style>
<script>
    $('.form-select2').select2();

    $(document).ready(function () {
        $("#topics").select2({
            placeholder: "Select Topics (Searchable)"
        });

</script>