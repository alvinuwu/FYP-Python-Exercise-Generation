
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="tab" class="tab-pane">
    <div class="panel-body">
        <div class="accordion" style="padding: 20px">
            @if (User.IsInRole("Admin"))
            {
                <h2>
                    Hello, Admin @User.Identity.Name
                </h2>
            }
            else if (User.IsInRole("Lecturer"))
            {
                <h2>
                    Hello, Lecturer @User.Identity.Name
                </h2>
            }
            else if (User.IsInRole("Student"))
            {
                <h2>
                    Hello, Student @User.Identity.Name
                </h2>
            }
        </div>
    </div>
    <br />
    <br />
    @if (User.IsInRole("Admin") || User.IsInRole("Lecturer"))
    {
        <div>
            <a class="btn btn-default offset-1" style="background-color:dodgerblue; color:white; width: 300px; height: 75px; font-size: 30px" asp-controller="ExercisePaper" asp-action="Create">Generate Paper</a> <br /><br />
            <a class="btn btn-default offset-1" style="background-color:deepskyblue; color:white; width: 300px; height: 75px; font-size: 30px" asp-controller="ExercisePaper" asp-action="PaperList">Grade Students</a>
        </div>
    }

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>
