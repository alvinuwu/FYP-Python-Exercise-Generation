@*
    Modernized _Layout.cshtml
    - Keeps all ASP.NET Razor logic
    - Uses a clean educational theme with improved layout
    - Pairs with wwwroot/css/site-modern.css
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Question Generator</title>
    <link rel="icon" href="~/images/fake_logo.png" />

    <!-- Bootstrap (Vendor) -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Modern Styles -->
    <link href="~/css/site-modern.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Script references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("ScriptSection", false)
    @RenderSection("MoreScripts", false)
</head>

<body>
    <div class="row no-gutters">
        <!-- SIDEBAR -->
        <div class="col-2 sidebar">
            <img src="~/images/fake_logo.png" alt="Logo" />

            <nav class="navbar navbar-expand-lg" role="navigation">
                <ul class="nav flex-column w-100">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">🏠 Home</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (!User.IsInRole("Student"))
                        {
                            <!-- Lecturer Menu -->
                            <li class="nav-item dropdown">
                                <button class="dropbtn">📘 Open-Ended Exercises</button>
                                <div class="dropdown-content">
                                    <a class="nav-link" asp-action="ViewTopics" asp-controller="ExercisePaper">View Topic List</a>
                                    <a class="nav-link" asp-action="GenerateOE" asp-controller="ExercisePaper">Create Template</a>
                                    <a class="nav-link" asp-action="AutoGenerateQn" asp-controller="ExercisePaper">Auto Generate Questions</a>
                                    <a class="nav-link" asp-action="ViewOEQuestions" asp-controller="ExercisePaper">View All Questions</a>
                                    <a class="nav-link" asp-action="Create" asp-controller="ExercisePaper">Generate Exercise Paper</a>
                                    <a class="nav-link" asp-action="ViewOEPapers" asp-controller="ExercisePaper">View Exercise Paper List</a>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="PaperList" asp-controller="ExercisePaper">📝 Grade Students</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="ViewUsers" asp-controller="Home">👥 Manage Accounts</a>
                            </li>

                            <li class="nav-item mt-auto">
                                <a class="nav-link" asp-controller="Account" asp-action="Logoff">🚪 Logout</a>
                            </li>
                        }
                        else
                        {
                            <!-- Student Menu -->
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ViewOEPapers" asp-controller="ExercisePaper">📚 View Exercise Paper List</a>
                            </li>
                            <li class="nav-item mt-auto">
                                <a class="nav-link" asp-controller="Account" asp-action="Logoff">🚪 Logout</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">Please log in</span>
                        </li>
                    }
                </ul>
            </nav>
        </div>

        <!-- MAIN CONTENT AREA -->
        <div class="col-10 main-content">
            <div class="content-card">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
