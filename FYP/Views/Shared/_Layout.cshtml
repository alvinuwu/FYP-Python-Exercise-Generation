<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- style sheets references -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("ScriptSection", false)
    @RenderSection("MoreScripts", false)
</head>
<body>
    <div class="row">
        <div style="background-color: royalblue" class="col-2">
            <img src="~/images/fake_logo.png" style="width:80%" />
            <div class="row">
                <nav class="navbar navbar-expand-lg col-12" style="background-color:royalblue" role="navigation">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            //Lecturer
                            <li class="nav-item">
                                
                                <div>
                                    <a class="nav-link" asp-action="GenerateOE" asp-controller="ExercisePaper">Manual Create Open-Ended Template</a>
                                    <a class="nav-link" asp-action="AutoGenerateQn" asp-controller="ExercisePaper">Auto Generate Open-Ended Questions</a>
                                    <a class="nav-link" asp-action="ViewOEQuestions" asp-controller="ExercisePaper">View All - Open-Ended Questions</a>
                                    <a class="nav-link" asp-action="Create" asp-controller="ExercisePaper">Generate Exercise Paper</a>
                                    <a class="nav-link" asp-action="Index" asp-controller="ExercisePaper">View Exercise Paper List</a>
                                    <a class="nav-link" asp-action="PaperList" asp-controller="ExercisePaper">Grade Students</a>
                                    <a asp-controller="Account" asp-action="Logoff">Logout</a>
                                    <br /><br /><br />
                                </div>
                            </li>

                            //Student
                            <li class="nav-item">
                                
                                <div>
                                    <a class="nav-link" asp-action="Index" asp-controller="ExercisePaper">View Exercise Paper List</a>
                                    <a asp-controller="Account" asp-action="Logoff">Logout</a>
                                    <br /><br /><br />
                                </div>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {

                            }
                        }
                    </ul>
                </nav>
            </div>

        </div>
        <div class="col-10">
            <br />
            <div class="row">
                <div class="col-10">
                    @RenderBody()
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>
</body>
</html>

<style>
    body {
        background-color: whitesmoke
    }
    .tab-pane {
        background-color: white;
        font-family: Calibri
    }
    a {
        color: white
    }
</style>